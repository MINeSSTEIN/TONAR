<Window x:Class="TONAR.Res.Windows.Hardware.Drives.ROMsAdding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TONAR.Res.Windows.Hardware.Drives"
        mc:Ignorable="d"
        Title="Добавить ПЗУ" Height="225" Width="196"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid>
        <Label Content="Введите модель ПЗУ"></Label>
        <TextBox x:Name="tbName" Margin="5,30,0,0" Width="170" MaxLength="30"></TextBox>
        <Label Content="Введите объем (ГБ)" Margin="0,55,0,0"></Label>
        <TextBox x:Name="tbVolume" Margin="5,85,0,0" Width="170" MaxLength="30"></TextBox>
        <ComboBox Margin="5,110,0,0" Name="cbManufacturerChosing" Text="Выберите производителя" Width="170" SelectedIndex="0"></ComboBox>
        <ComboBox Margin="5,135,0,0" Name="cbTypeChosing" Text="Выберите производителя" Width="170" SelectedIndex="0"></ComboBox>
        <Button Click="btnAdd_Click" x:Name="btnAdd" Content="Добавить" Width="83" Margin="5,160,5,5"></Button>
        <Button Click="btnCancel_Click" x:Name="btnCancel" Content="Отмена" Width="83" Margin="92,160,5,5"></Button>
    </Grid>
</Window>
