<Window x:Class="TONAR.Res.Windows.Hardware.Processors.ModelAdding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TONAR.Res.Windows.Hardware.Processors"
        mc:Ignorable="d"
        Title="Добавить модель" Height="145" Width="196"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Grid>
        <Label Content="Введите название модели"></Label>
        <TextBox x:Name="tbName" Margin="5,30,0,0" Width="170" MaxLength="30"></TextBox>
        <ComboBox Margin="5,55,0,0" Name="cbVendorChosing" Text="Выберите производителя" Width="170" SelectedIndex="0"></ComboBox>
        <Button Click="btnAdd_Click" x:Name="btnAdd" Content="Добавить" Width="83" Margin="5,80,5,5"></Button>
        <Button Click="btnCancel_Click" x:Name="btnCancel" Content="Отмена" Width="83" Margin="92,80,5,5"></Button>
    </Grid>
</Window>
