<Page x:Class="TONAR.Res.Customs.Hardware.Processors.ProcessorsManufacturersView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TONAR.Res.Customs.Hardware.Processors"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="800"
      Title="ProcessorsManufacturersView">

    <Grid Margin="10">
        <StackPanel Orientation="Horizontal">
            <Image x:Name="iPic" Height="100" Stretch="Uniform"></Image>
            <StackPanel Orientation="Vertical">
                <Label x:Name="lName"></Label>
                <TextBlock x:Name="tblDesc" TextWrapping="Wrap" Height="140" Margin="5" Width="600"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
